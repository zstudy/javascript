<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta charset="utf-8">
	<style>
		.container
		{
			border: 1px solid black;   
		}

		.clearFloat{
			clear: both; 
		}

		.cell{
			border: 1px solid blue;
			width: 30px;
			height: 30px;
			float: left;
		}

		.lastInRow{
			background-color: red;
			
		}
		.theEndCell{
			clear: both; 
			background: blue;
		}

	</style>
</head>
    <body>
		<div id="container" class="container" > 
			<div class='clearFloat'></div> 
		</div>

		<script>
				
			var container = document.getElementById("container");

			var index = 63;  

			for(var j = 7; j >= 0; j--)
			{
				for(var i = 7; i >= 0; i--)
				{
					 var cell = document.createElement("DIV");
					 cell.setAttribute("class", "cell");
								 
					 if (i == 0)
					 {
					   cell.setAttribute("class", "cell theEndCell");
					 }
					
					var textnode = document.createTextNode(index);
					
					cell.appendChild(textnode);
							 
					var supprotingfunc = function(number){ return function(){ alert("I am number: " + number); } }            
					cell.onclick =  supprotingfunc(index) 
					
				   
					container.insertBefore(cell, container.childNodes[0]);
					
					index--;
							   
				}
			}

			function MapObject()
			{
				this.position = [0,0];
				this.healthy = 100;
				this.action = function(mapObject){ };
			}

			function Worker()
			{
				MapObject.apply(this);
				this.Walk = function(map){ };
			}





			var worker = new Worker();

			worker.position[0] = 2;
			worker.position[1] = 3;
			console.log(worker.position);

			var worker1 = new Worker();
			console.log(worker1.position);


			
		</script>
	</body>	
</html>
